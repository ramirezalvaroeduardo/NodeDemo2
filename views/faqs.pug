
extends layout

block content
  div.commonStyle()
    
    div.commonStyle(align="center")
      img.imgStyle(src="images/mspb_logo.jpeg" alt="MSPB" width="160" height="160" align="center")

    hr 

    h3.h3Style Common Questions and Answers
    div(class="accordion" id="accordionExample")
      div(class="accordion-item" style="margin-left: 35px; width: 92%;")
        h2(class="accordion-header" id="headingOne")
          button(class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne" style="font-size: 0.9em;" ) Question Item No 1
        div(class="accordion-collapse collapse" id="collapseOne" aria-labelledby="headingOne" data-bs-parent="#accordionExample")
          div(class="accordion-body")
            h4 A1: 111111
            h4 A2: 222222.
      div(class="accordion-item" style="margin-left: 35px; width: 92%;")
        h2(class="accordion-header" id="headingTwo")
          button(class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo" style="font-size: 0.9em;" ) Question Item No 2
        div(class="accordion-collapse collapse" id="collapseTwo" aria-labelledby="headingTwo" data-bs-parent="#accordionExample")
          div(class="accordion-body")
            h4 A1: 111111
            h4 A2: 222222.
      div(class="accordion-item" style="margin-left: 35px; width: 92%;")
        h2(class="accordion-header" id="headingThree")
          button(class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree" style="font-size: 0.9em;") Question Item No 3
        div(class="accordion-collapse collapse" id="collapseThree" aria-labelledby="headingThree" data-bs-parent="#accordionExample")
          div(class="accordion-body")
            h4 A1: 111111
            h4 A2: 222222.

  hr 

  div.videoStyle()
    h3.h3Style Tutorials (Videos)
    ol
      li()
        div(style=" display: flex; align-items: top;")
          video(width='80' heigth='120' controls)
              source(src='videos/test_tutorial.mov')
              Your browser does not support the video tag/type.
          div(style="align-items: center; margin-left: 10px;")
            p Test Primer Tutorial
            p Author: Laura Ramirez
            

  hr

  div.yourQuestionStyle()
    h3.h3Style Write/Email your question
    div.questionStyle()
      div
        label.labelStyle(for='dQuestion') Question
      div
        textarea.questionText(id='dQuestion' placeholder='Write your question' rows=3)
    button.sendStyle(onClick='sendDMail("dQuestion")') Send
