doctype html
html
  head
    title= title
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src="https://kit.fontawesome.com/4c8d3e9977.js" crossorigin="anonymous")
  body
    block content

    div.header_div
      nav(class="nav nav-pills nav-fill fixed-top navStyle")
        div.menuItem
          img.headerImg(src="images/mspb_logo.jpeg" alt="MSPB")
          div.lineMenu
            a(class="nav-link aProp" data-bs-toggle="offcanvas" href="#mainOffCanvas" role="button" aria-controls="mainOffCanvas")
                span(class="fa-solid fa-bars") 
                p(class="headerIcons") Menu
        div.aDiv
          a(class="nav-link aProp" href="/") 
            span(class="fa-solid fa-house") 
            p(class="headerIcons") Home
          a(class="nav-link aProp" aria-current="page" href="/pvdr")
            span(class="fa-solid fa-hospital-user") 
            p(class="headerIcons") Provider
          a(class="nav-link aProp" href="/upmr") 
            span(class="fa-solid fa-building-user") 
            p(class="headerIcons") Management
          a(class="nav-link aProp" href="/staff") 
            span(class="fa-solid fa-users") 
            p(class="headerIcons") Staff
          a(class="nav-link aProp" href="/faqs")
            span(class="fa-solid fa-person-circle-question") 
            p(class="headerIcons") FAQs
          a(class="nav-link aProp" href="/tutorials")
            span(class="fa-solid fa-video") 
            p(class="headerIcons") Tutorials


      div.offCanvasStyle(class="offcanvas offcanvas-start" tabindex="-1" id="mainOffCanvas" aria-labelledby="mainOffCanvasLabel")
        div(class="offcanvas-header")
          h3.canvasTitle Menu
          button(type="button" class="btn-close text-reset offCanvasClose" data-bs-dismiss="offcanvas" aria-label="Close")
        div(class="offcanvas-body" style="padding: 0; margin: 0")
          div(class="dropdown mt-2" style="padding: 0; margin: 0")
            ul.ulCanvas(aria-labelledby="dropdownMenuButton")
              li.canvasObject
                a.canvasMenuOption(href="/")
                  span(class="fa-solid fa-house") 
                  p(class="headerIcons") Home
              li.canvasObject 
                a.canvasMenuOption(href="/pvdr")
                  span(class="fa-solid fa-hospital-user") 
                  p(class="headerIcons") Provider
              li.canvasObject 
                a.canvasMenuOption(href="/upmr")
                  span(class="fa-solid fa-building-user") 
                  p(class="headerIcons") Office Manager
              li.canvasObject
                a.canvasMenuOption(href="/staff")
                  span(class="fa-solid fa-users") 
                  p(class="headerIcons") Office Staff
              li.canvasObject
                a.canvasMenuOption(href="/faqs")
                  span(class="fa-solid fa-person-circle-question") 
                  p(class="headerIcons") FAQs
              li.canvasObject 
                a.canvasMenuOption(href="/tutorials")
                  span(class="fa-solid fa-video") 
                  p(class="headerIcons") Tutorials

    script(src='/javascripts/getQuestionText.js')

    script(src='/javascripts/faqs.js')
    script(src='/javascripts/sendDMail.js')
    script(src='/javascripts/addQuestion.js')
    script(src='/javascripts/jquery.min.js')
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous")